<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories - Inventory App</title>
  </head>
  <body>
    <%- include("partials/navbar", { links }) %>
    <main>
      <header>Categories</header>
      <div>
        <ul>
          <h1>Genres</h1>
          <% categories.genres.forEach((genre) => { %>
            <li><a href="/categories/<%= genre %>"><%= genre %></a></li>
          <% }) %>
        </ul>
        <ul>
          <h1>Platforms</h1>
          <% categories.platforms.forEach((platform) => { %>
            <li><a href="/categories/<%= platform %>"><%= platform %></a></li>
          <% }) %>
        </ul>
        <ul>
          <h1>Developers</h1>
          <% categories.developers.forEach((developer) => { %>
            <li><a href="/categories/<%= developer %>"><%= developer %></a></li>
          <% }) %>
        </ul>
      </div>
    </main>    
  </body>
</html>