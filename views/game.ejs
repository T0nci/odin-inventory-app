<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.game %> - Inventory App</title>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/global.css">
  </head>
  <body>
    <%- include("partials/navbar", { links }) %>
    <main>
      <p><%= game.game %></p>
      <p><%= game.price %>â‚¬</p>
      <p><%= game.about %></p>
      <p><%= game.release_date.toDateString().slice(4) %></p>
      <ul>
        <p>Genres:</p>
        <% game.genres.forEach((row) => { %>
          <li><%= row.category %></li>
        <% }) %>
      </ul>
      <ul>
        <p>Developers:</p>
        <% game.developers.forEach((row) => { %>
          <li><%= row.category %></li>
        <% }) %>
      </ul>
      <ul>
        <p>Platforms:</p>
        <% game.platforms.forEach((row) => { %>
          <li><%= row.category %></li>
        <% }) %>
      </ul>
      <a href="/games/update/<%= game.id %>">Update game</a>
      <form action="/games/delete/<%= game.id %>" method="POST">
        <div>
          <label for="password">Admin password:</label>
          <input type="password" name="password" id="password" required>
        </div>
        <div>
          <button type="submit">Delete game</button>
        </div>
      </form>
    </main>
  </body>
</html>