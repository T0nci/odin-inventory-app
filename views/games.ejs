<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games - Inventory App</title>
  </head>
  <body>
    <%- include("partials/navbar", { links }) %>
    <main>
      <header>Games<%= locals.filter && `, ${filter.type}: ${filter.category}` %></header>
      <a href="/games/create">Create new game</a>
      <ul>
        <% games.forEach((game) => { %>
          <li>
            <button onclick="location.href = '/games/game/<%= game.id %>'">
              <p><%= game.game %></p>
              <p><%= game.price %>â‚¬</p>
              <ul>
                <% game.genres.forEach((genre) => { %>
                  <li><%= genre %></li>
                <% }) %>
              </ul>
            </button>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>