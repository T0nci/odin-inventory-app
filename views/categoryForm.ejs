<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= action %> Category - Inventory App</title>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/global.css">
    <link rel="stylesheet" href="/form.css">
  </head>
  <body>
    <%- include("partials/navbar", { links }) %>
    <main>
      <div class="main">
        <header><%= action %> Category</header>
        <form action="/categories/<%= href %>" method="POST" class="form">
          <%- include("partials/errors", { errors: locals.errors }) %>
          <div class="form-part">
            <label for="categoryName" class="bold">Category name:</label>
            <input type="text" name="categoryName" id="categoryName" autocomplete="off" autofocus required value="<%= locals.categoryName || '' %>" class="text-input">
          </div>
          <% if (locals.types) { %>
            <fieldset class="form-part">
              <legend class="bold">Type of category:</legend>
              <div class="radios-checkboxes">
                <% types.forEach((type) => { %>
                    <div class="radio-checkbox">
                      <input type="radio" name="typeId" id="<%= type.id %>" value="<%= type.id %>" required>
                      <label for="<%= type.id %>"><%= type.type[0].toUpperCase() + type.type.slice(1) %></label>
                    </div>
                <% }) %>
              </div>
            </fieldset>
          <% } %>
          <div class="form-part">
            <label for="password" class="bold">Admin password:</label>
            <input type="password" name="password" id="password" required class="text-input">
          </div>
          <div>
            <button type="submit" class="submit">Submit</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
